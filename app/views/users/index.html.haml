%h1
 = link_to 'New user', new_user_path
 %table
  -@users.each do |user|
   %tr
    %td= user.name
    %td= user.surname
    %td= user.text
    %td= link_to 'Show', user_path(user),class:"btn btn-primary"
    %td= link_to 'Edit', edit_user_path(user),class:"btn btn-info"
    %td= link_to 'Destroy', user_path(user),class:"btn btn-danger" ,
     method: :delete, data: { confirm: 'Are you sure?' }