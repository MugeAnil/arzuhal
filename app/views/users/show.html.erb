    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>
    <p>
      <strong>Surname</strong>
      <%= @user.surname %>
    </p>
    <p>
      <strong>E-mail</strong>
      <%= @user.e_mail %>
    </p>
    <p>
       <strong>Text:</strong>
       <%= @user.text %>
    </p>

    h2>Add a comment:</h2>
    <%= form_for([@user, @user.comments.build]) do |f| %>
        <p>
          <%= f.label :commenter %><br>
          <%= f.text_field :commenter %>
        </p>
        <p>
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </p>
        <p>
          <%= f.submit %>
        </p>
    <% end %>
<%= link_to 'Back', user_path %>
<%= link_to 'Edit', edit_user_path(@user) %>